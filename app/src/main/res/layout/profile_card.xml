<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:orientation="vertical"
    app:cardCornerRadius="@dimen/ten">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/profile_image"
            android:layout_width="match_parent"
            android:layout_height="@dimen/one_twenty_five"
            android:scaleType="centerCrop"


            />

        <View

            android:layout_width="match_parent"
            android:layout_height="@dimen/one_twenty_five"
            android:alpha="0.5"
            android:background="@color/black"
            android:scaleType="centerCrop"

            />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/fourty"
            android:layout_below="@id/profile_image"
            >


            <TextView
                android:id="@+id/profile_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="\@gloriousfury"
                android:textColor="@color/blue"
                android:textSize="14sp"
                android:textStyle="bold"

                />


            <ImageView
                android:layout_width="@dimen/ten"
                android:layout_height="@dimen/ten"

                android:layout_marginRight="@dimen/five"
                android:layout_marginTop="13dp"
                android:layout_toLeftOf="@id/profile_name"
                android:layout_centerInParent="true"
                android:src="@drawable/img_java"


                />


        </RelativeLayout>
    </RelativeLayout>


</android.support.v7.widget.CardView>